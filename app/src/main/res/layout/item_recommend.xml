<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_recom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เหมาะกับการออกไปเดินเล่น"
        android:textSize="16dp"

        app:layout_constraintLeft_toRightOf="@+id/img_recom"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_recom"
        android:layout_width="109dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/air_recommend_1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_recom"
        android:layout_marginTop="16dp" />
</android.support.constraint.ConstraintLayout>