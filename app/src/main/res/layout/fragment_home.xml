<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.admin.gitframeapacas.FeedHomeFragment">


        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Current location"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/txtDataBy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Data collected by: Myself"
            android:textSize="17dp"
            android:textStyle="normal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLocation"
            app:layout_constraintRight_toRightOf="@+id/txtLocation"
            app:layout_constraintLeft_toLeftOf="@+id/txtLocation" />

        <TextView
            android:id="@+id/txtStatus_sensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sensor: Active"
            android:textSize="17dp"
            android:textStyle="normal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDataBy"
            app:layout_constraintRight_toRightOf="@+id/txtDataBy"
            app:layout_constraintLeft_toLeftOf="@+id/txtDataBy" />

        <pl.pawelkleczkowski.customgauge.CustomGauge
            android:id="@+id/gaugeMaster"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:gaugeDividerColor="#ffeb3b"
            app:gaugeDividerDrawFirst="false"
            app:gaugeDividerDrawLast="true"
            app:gaugeDividerStep="10"
            app:gaugeEndValue="100"
            app:gaugePointEndColor="#e51c23"
            app:gaugePointSize="0"
            app:gaugePointStartColor="#259b24"
            app:gaugeStartAngle="180"
            app:gaugeStartValue="0"
            app:gaugeStrokeCap="BUTT"
            app:gaugeStrokeColor="#bdbdbd"
            app:gaugeStrokeWidth="20dp"
            app:gaugeSweepAngle="180"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtStatus_sensor"
            app:layout_constraintLeft_toLeftOf="@+id/txtStatus_sensor"
            app:layout_constraintRight_toRightOf="@+id/txtStatus_sensor" />

        <TextView
            android:id="@+id/txtAQI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AQI = 36"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@+id/gaugeMaster"
            app:layout_constraintLeft_toLeftOf="@+id/txtStatus_sensor"
            app:layout_constraintRight_toRightOf="@+id/txtStatus_sensor"
            android:layout_marginTop="64dp" />

        <Button
            android:id="@+id/btnRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Random Gas"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAQI"
            app:layout_constraintLeft_toLeftOf="@+id/txtStatus_sensor"
            app:layout_constraintRight_toRightOf="@+id/txtStatus_sensor" />


            <pl.pawelkleczkowski.customgauge.CustomGauge
                android:id="@+id/gPM25"
                android:layout_width="147dp"
                android:layout_height="148dp"
                android:paddingTop="50dp"
                app:gaugeEndValue="100"
                app:gaugePointEndColor="#F44336"
                app:gaugePointSize="0"
                app:gaugePointStartColor="#8BC34A"
                app:gaugeStartAngle="220"
                app:gaugeStartValue="0"
                app:gaugeStrokeCap="ROUND"
                app:gaugeStrokeColor="#B2EBF2"
                app:gaugeStrokeWidth="10dp"
                app:gaugeSweepAngle="100"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/btnRandom"
                android:layout_marginStart="32dp"
                app:layout_constraintLeft_toLeftOf="parent" />


            <pl.pawelkleczkowski.customgauge.CustomGauge
                android:id="@+id/gCO"
                android:layout_width="147dp"
                android:layout_height="148dp"


                android:paddingBottom="00dp"
                android:paddingTop="50dp"
                app:gaugeEndValue="100"
                app:gaugePointEndColor="#F44336"
                app:gaugePointSize="0"
                app:gaugePointStartColor="#8BC34A"
                app:gaugeStartAngle="220"
                app:gaugeStartValue="0"
                app:gaugeStrokeCap="ROUND"
                app:gaugeStrokeColor="#B2EBF2"
                app:gaugeStrokeWidth="10dp"
                app:gaugeSweepAngle="100"
                app:layout_constraintLeft_toRightOf="@+id/gPM25"
                app:layout_constraintTop_toTopOf="@+id/gPM25"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.25" />

        <pl.pawelkleczkowski.customgauge.CustomGauge
            android:id="@+id/gHO2"
            android:layout_width="147dp"
            android:layout_height="148dp"

            android:paddingBottom="0dp"
            android:paddingTop="50dp"
            app:gaugeEndValue="100"
            app:gaugePointEndColor="#F44336"
            app:gaugePointSize="0"
            app:gaugePointStartColor="#8BC34A"
            app:gaugeStartAngle="220"
            app:gaugeStartValue="0"
            app:gaugeStrokeCap="ROUND"
            app:gaugeStrokeColor="#B2EBF2"
            app:gaugeStrokeWidth="10dp"
            app:gaugeSweepAngle="100"
            app:layout_constraintTop_toBottomOf="@+id/gPM25"
            app:layout_constraintLeft_toLeftOf="@+id/gPM25"
            android:layout_marginTop="8dp" />

        <pl.pawelkleczkowski.customgauge.CustomGauge
                android:id="@+id/gSO2"
                android:layout_width="147dp"
                android:layout_height="148dp"
                android:paddingBottom="00dp"
                android:paddingTop="50dp"
                app:gaugeEndValue="100"
                app:gaugePointEndColor="#F44336"
                app:gaugePointSize="0"
                app:gaugePointStartColor="#8BC34A"
                app:gaugeStartAngle="220"
                app:gaugeStartValue="0"
                app:gaugeStrokeCap="ROUND"
                app:gaugeStrokeColor="#B2EBF2"
                app:gaugeStrokeWidth="10dp"
                app:gaugeSweepAngle="100"
            app:layout_constraintTop_toTopOf="@+id/gHO2"
            app:layout_constraintLeft_toLeftOf="@+id/gCO" />



            <TextView
                android:id="@+id/txtPM25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@+id/gPM25"
                app:layout_constraintLeft_toLeftOf="@+id/gPM25"
                app:layout_constraintRight_toLeftOf="@+id/gCO"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="75dp" />

            <TextView
                android:id="@+id/txtCO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="@+id/gCO"
                app:layout_constraintRight_toRightOf="@+id/gCO"
                app:layout_constraintTop_toTopOf="@+id/txtPM25" />

            <TextView
                android:id="@+id/txtH2O"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/gPM25"
                app:layout_constraintLeft_toLeftOf="@+id/gHO2"
                app:layout_constraintRight_toRightOf="@+id/gHO2"
                android:layout_marginTop="75dp" />

            <TextView
                android:id="@+id/txtSO2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@+id/txtH2O"
                app:layout_constraintLeft_toLeftOf="@+id/gSO2"
                app:layout_constraintRight_toRightOf="@+id/gSO2" />



        <View
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/gHO2"
            app:layout_constraintRight_toRightOf="@+id/gSO2"
            app:layout_constraintLeft_toLeftOf="@+id/gHO2"
            />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="คุณภาพอากาศ"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gHO2"
            app:layout_constraintRight_toRightOf="@+id/gSO2"
            app:layout_constraintLeft_toLeftOf="@+id/gHO2" />


        <TextView
            android:id="@+id/txtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ทดสอบ"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_recom"
            app:layout_constraintRight_toRightOf="@+id/recyclerView_recom"
            app:layout_constraintLeft_toLeftOf="@+id/recyclerView_recom"
            android:layout_marginTop="24dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_recom"

            android:layout_width="0dp"
            android:layout_height="453dp"
            tools:listitem="@layout/item_recommend"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

        </android.support.v7.widget.RecyclerView>



    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>